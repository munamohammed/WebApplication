<div class="w3-main" style="margin-left:300px;margin-top:43px;">
    <div class="w3-light-grey">
        <!-- Header -->
        <header class="w3-container" style="padding-top:22px" style="padding-right:100px">
            <h5><b><i class="fa fa-dashboard"></i> Settings</b></h5>
        </header>

        <div class="w3-row-padding w3-margin-bottom">

            <!--<div class="w3-threequarter">-->

            <div class="w3-halfquarter">
                <div class="w3-container w3-padding-16">
                    <div class="w3-clear"></div>
                    <label>Class:</label>
                    <div class="styled">
                        <select id="selectclass" onchange="loadCourseSection({{currentUser.userId}})">
                            <option selected>Select Class</option>
                            {{#classes}}
                                <option value="{{CourseCode}}"><a href="javascript:void(0);" >{{CourseName}}-{{CourseCode}}</a></option>
                            {{/classes}}
                            <option value="all">All</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="w3-halfquarter">
                <div class="w3-container w3-padding-16">
                    <div class="w3-clear"></div>

                    <div class="styled" id="sectionDiv">
                        <label>Section:</label>
                        <select id="sectionList" onchange="onSectionListChange()"></select>
                    </div>
                </div>
            </div>

            <div class="w3-threequarter">
                <div class="w3-container">
                    <div style="width: 40%; float: left" >
                        <label>Send report:</label><br>
                        <input class="setting" id="dailyCheck" data-state='0' onchange="reportTimeCheck(this)" type="checkbox"  value="day" disabled> Daily<br>
                        <input class="setting" id="weeklyCheck" data-state='0' onchange="reportTimeCheck(this)" type="checkbox"  value="week" disabled> Weekly<br>
                        <input class="setting" id="monthlyCheck" data-state='0' onchange="reportTimeCheck(this)" type="checkbox"  value="month" disabled> Monthly<br>
                        <input class="setting" id="noneCheckReport" data-state='0' onchange="reportTimeCheck(this)" type="checkbox"  value="none" disabled> None
                    </div>
                    <div style="width: 50%; clear: right">
                        <label>Send alert:</label><br>
                        <input class="setting"id="teenCheck" data-state='0' onchange="alertTimeCheck(this)" type="checkbox"  value="teen" disabled> 10%<br>
                        <input class="setting" id="fiftenCheck" data-state='0' onchange="alertTimeCheck(this)" type="checkbox"  value="fifteen" disabled> 15%<br>
                        <input class="setting" id="tweentyCheck" data-state='0' onchange="alertTimeCheck(this)" type="checkbox"  value="tweenty" disabled> 20%<br>
                        <input class="setting" id="tweentyfiveCheck" data-state='0' onchange="alertTimeCheck(this)" type="checkbox"  value="tweentyfive" disabled> 25%<br>
                        <input class="setting" id="noneCheckAlert" data-state='0' onchange="alertTimeCheck(this)" type="checkbox"  value="none" disabled> None
                    </div>

                    <div>
                        <button type="button" onclick="SaveSettings()" class="w3-button w3-grey w3-round w3-border" style="margin-top: 10px">Save</button>
                    </div>

                </div>
            </div>




            <!--</div>-->
            <!--<div class="w3-quarter"></div>-->
        </div>

        <!-- End page content -->
    </div>
</div>

<script src="views/js/Setting.js"></script>